<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:layout_margin="@dimen/widget_margin">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundColor"
    android:orientation="vertical">
    <LinearLayout
        android:id="@+id/widget_layout_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/backgroundColor_Ingredient_Step_DetailStep_RecipeName_WidgetIngredient"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/padding_small"
        android:paddingRight="@dimen/padding_small">
        <ImageView
            android:id="@+id/widget_img_launcher"
            android:layout_width="@dimen/margin_extra_large"
            android:layout_height="@dimen/margin_extra_large"
            android:layout_gravity="center_vertical"
            android:src="@mipmap/ic_launcher"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/Baking_App_Widget"
            android:layout_gravity="center_vertical"
            android:textColor="@color/colorPrimaryDark"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textStyle="bold"
            android:paddingStart="@dimen/padding_and_margin_medium"
            android:paddingLeft="@dimen/padding_and_margin_medium"
            android:paddingEnd="@dimen/padding_and_margin_medium"
            android:paddingRight="@dimen/padding_and_margin_medium"/>
    </LinearLayout>
    <ListView
        android:id="@+id/widget_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </ListView>
</LinearLayout>

</FrameLayout>