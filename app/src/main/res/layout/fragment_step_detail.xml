<?xml version="1.0" encoding="utf-8"?>

<android.support.v4.widget.NestedScrollView android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.example.user.bakingapp.StepDetailFragment"
    xmlns:android="http://schemas.android.com/apk/res/android">

<LinearLayout
android:layout_width="match_parent"
android:layout_height="match_parent"
android:orientation="vertical">

    <FrameLayout android:layout_width="match_parent"
        android:layout_height="match_parent">

<ImageView
    android:id="@+id/error_image_step"
    android:layout_width="match_parent"
    android:layout_height="@dimen/image_view_height"
    android:layout_margin="@dimen/padding_and_margin_medium"
    android:contentDescription="@string/contentDescription"/>

    <com.google.android.exoplayer2.ui.PlayerView
        android:id="@+id/video"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_margin="@dimen/padding_and_margin_medium"
        app:resize_mode="fixed_width"/>

    </FrameLayout>

<TextView
    android:id="@+id/detail_step"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:paddingBottom="@dimen/padding_and_margin_medium"
    android:paddingLeft="@dimen/padding_and_margin_medium"
    android:paddingStart="@dimen/padding_and_margin_medium"
    android:paddingTop="@dimen/padding_and_margin_very_small"
    android:textColor="@color/textColor_Step_and_Detail_Step"
    android:textSize="@dimen/textSize_medium"
    android:background="@color/backgroundColor_Ingredient_Step_DetailStep_RecipeName_WidgetIngredient"/>

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@color/backgroundColor">

    <Button
        android:id="@+id/previous_step"
        android:layout_width="0dp"
        android:layout_weight="0.5"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/padding_large"
        android:text="@string/Previous_Step_Button"
        android:textSize="@dimen/textSize_small" />

    <Button
        android:id="@+id/next_step"
        android:layout_width="0dp"
        android:layout_weight="0.5"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/padding_large"
        android:text="@string/Next_Step_Button"
        android:textSize="@dimen/textSize_small" />

</LinearLayout>

</LinearLayout>

</android.support.v4.widget.NestedScrollView>

